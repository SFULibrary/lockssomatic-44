{% extends 'base.html.twig' %}

{% block title %}DepositStatus{% endblock %}

{% block pageheader %} 
    <h1>DepositStatus</h1>
{% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('deposit_status_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('deposit_status_edit', { 'id': depositStatus.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('deposit_status_delete', { 'id': depositStatus.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this DepositStatus?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Agreement</th>
                <td>{{ depositStatus.agreement }}</td>
            </tr>
            <tr>
                <th>Query Date</th>
                <td>{% if depositStatus.queryDate %}{{ depositStatus.queryDate|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if depositStatus.status %}{{ depositStatus.status|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if depositStatus.created %}{{ depositStatus.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if depositStatus.updated %}{{ depositStatus.updated|date }}{% endif %}</td>
            </tr>        
            <tr>
                <th>Deposit</th>
                <td>
                    <a href="{{ path('deposit_show', { 'id': depositStatus.deposit.id}) }}">
                        {{ depositStatus.deposit }}
                    </a>
                </td>
            </tr>        
        </tbody>
    </table>
{% endblock %}
