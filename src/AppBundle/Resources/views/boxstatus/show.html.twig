{% extends 'base.html.twig' %}

{% block title %}BoxStatus{% endblock %}

{% block pageheader %} 
    <h1>BoxStatus</h1>
{% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('box_status_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('box_status_edit', { 'id': boxStatus.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('box_status_delete', { 'id': boxStatus.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this BoxStatus?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Query Date</th>
                <td>{% if boxStatus.queryDate %}{{ boxStatus.queryDate|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Success</th>
                <td>{% if boxStatus.success %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Errors</th>
                <td>{{ boxStatus.errors }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if boxStatus.created %}{{ boxStatus.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if boxStatus.updated %}{{ boxStatus.updated|date }}{% endif %}</td>
            </tr>        
            <tr>
                <th>Box</th>
                <td>
                    <a href="{{ path('box_show', { 'id': boxStatus.box.id}) }}">
                        {{ boxStatus.box }}
                    </a>
                </td>
            </tr>        
        </tbody>
    </table>
    {% if boxStatus.caches | length > 0 %}    
        <h2>Caches</h2>
        <ul>
            {% for caches in boxStatus.caches %}
                <li>
                    <a href="{{ path("caches_show", {"id":caches.id}) }}">
                        {{ caches }}
                    </a>
                </li>
            {% endfor %} 
        </ul>
    {% endif %}
{% endblock %}
