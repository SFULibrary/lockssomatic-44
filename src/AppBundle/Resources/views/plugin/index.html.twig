{% extends 'base.html.twig' %}

{% block title %}Plugin List{% endblock %}

{% block pageheader %}
    <h1>Plugin List</h1>
    <p class="count">
        Displaying {{ plugins|length }} plugins of {{ plugins.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('plugin_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New
                </a>
            {% endif %}
            <a href="{{ path('plugin_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Path</th>
                <th>Filename</th>
                <th>Version</th>
                <th>Identifier</th>
            </tr>
        </thead>
        <tbody>
            {% for plugin in plugins %}
                <tr>
                    <td>
                        <a href="{{ path('plugin_show', { 'id': plugin.id }) }}">
                            {{ plugin.name }}
                        </a>
                    </td>
                    <td>{{ plugin.path }}</td>
                    <td>{{ plugin.filename }}</td>
                    <td>{{ plugin.version }}</td>
                    <td>{{ plugin.identifier }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(plugins) }}
    </div>

{% endblock %}
