{% extends 'base.html.twig' %}

{% block title %}Plugin{% endblock %}

{% block pageheader %} 
    <h1>Plugin</h1>
{% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('plugin_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('plugin_edit', { 'id': plugin.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('plugin_delete', { 'id': plugin.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Plugin?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ plugin.name }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ plugin.path }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ plugin.filename }}</td>
            </tr>
            <tr>
                <th>Version</th>
                <td>{{ plugin.version }}</td>
            </tr>
            <tr>
                <th>Identifier</th>
                <td>{{ plugin.identifier }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if plugin.created %}{{ plugin.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if plugin.updated %}{{ plugin.updated|date }}{% endif %}</td>
            </tr>        
        </tbody>
    </table>
    {% if plugin.aus | length > 0 %}    
        <h2>Aus</h2>
        <ul>
            {% for aus in plugin.aus %}
                <li>
                    <a href="{{ path("aus_show", {"id":aus.id}) }}">
                        {{ aus }}
                    </a>
                </li>
            {% endfor %} 
        </ul>
    {% endif %}
    {% if plugin.contentProviders | length > 0 %}    
        <h2>Contentproviders</h2>
        <ul>
            {% for contentProviders in plugin.contentProviders %}
                <li>
                    <a href="{{ path("contentProviders_show", {"id":contentProviders.id}) }}">
                        {{ contentProviders }}
                    </a>
                </li>
            {% endfor %} 
        </ul>
    {% endif %}
    {% if plugin.pluginProperties | length > 0 %}    
        <h2>Pluginproperties</h2>
        <ul>
            {% for pluginProperties in plugin.pluginProperties %}
                <li>
                    <a href="{{ path("pluginProperties_show", {"id":pluginProperties.id}) }}">
                        {{ pluginProperties }}
                    </a>
                </li>
            {% endfor %} 
        </ul>
    {% endif %}
{% endblock %}
