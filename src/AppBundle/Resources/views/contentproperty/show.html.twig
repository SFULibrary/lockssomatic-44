{% extends 'base.html.twig' %}

{% block title %}ContentProperty{% endblock %}

{% block pageheader %} 
    <h1>ContentProperty</h1>
{% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('pln_deposit_content_property_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('pln_deposit_content_property_edit', { 'id': contentProperty.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('pln_deposit_content_property_delete', { 'id': contentProperty.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this ContentProperty?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Property Key</th>
                <td>{{ contentProperty.propertyKey }}</td>
            </tr>
            <tr>
                <th>Property Value</th>
                <td>{{ contentProperty.propertyValue }}</td>
            </tr>
            <tr>
                <th>Is List</th>
                <td>{% if contentProperty.isList %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if contentProperty.created %}{{ contentProperty.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if contentProperty.updated %}{{ contentProperty.updated|date }}{% endif %}</td>
            </tr>        
            <tr>
                <th>Content</th>
                <td>
                    <a href="{{ path('content_show', { 'id': contentProperty.content.id}) }}">
                        {{ contentProperty.content }}
                    </a>
                </td>
            </tr>        
        </tbody>
    </table>
{% endblock %}
