{% extends 'base.html.twig' %}

{% block title %}AuProperty List{% endblock %}

{% block pageheader %}
    <h1>AuProperty List</h1>
    <p class="count">
        Displaying {{ auProperties|length }} auProperties of {{ auProperties.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('pln_au_property_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New
                </a>
            {% endif %}
            <a href="{{ path('pln_au_property_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Property Key</th>
                <th>Property Value</th>
            </tr>
        </thead>
        <tbody>
            {% for auProperty in auProperties %}
                <tr>
                    <td>
                        <a href="{{ path('pln_au_property_show', { 'id': auProperty.id }) }}">
                            {{ auProperty.propertyKey }}
                        </a>
                    </td>
                    <td>{{ auProperty.propertyValue }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(auProperties) }}
    </div>

{% endblock %}
