{% extends 'base.html.twig' %}

{% block title %}Content List{% endblock %}

{% block pageheader %}
    <h1>Content List</h1>
    <p class="count">
        Displaying {{ contents|length }} contents of {{ contents.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('deposit_content_new', {'plnId': pln.id, 'depositId': deposit.id}) }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New
                </a>
            {% endif %}
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Url</th>
                <th>Title</th>
                <th>Size</th>
                <th>Date Deposited</th>
                <th>Checksum Type</th>
                <th>Checksum Value</th>
            </tr>
        </thead>
        <tbody>
            {% for content in contents %}
                <tr>
                    <td>
                        <a href="{{ path('deposit_content_show', { 'id': content.id, 'plnId': pln.id, 'depositId': deposit.id }) }}">
                            {{ content.url }}
                        </a>
                    </td>
                    <td>{{ content.title }}</td>
                    <td>{{ content.size }}</td>
                    <td>{% if content.dateDeposited %}{{ content.dateDeposited|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ content.checksumType }}</td>
                    <td>{{ content.checksumValue }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(contents) }}
    </div>

{% endblock %}
