{% extends 'base.html.twig' %}

{% block title %}BoxStatus List{% endblock %}

{% block pageheader %}
    <h1>BoxStatus List</h1>
    <p class="count">
        Displaying {{ boxStatuses|length }} boxStatuses of {{ boxStatuses.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Query Date</th>
                <th>Success</th>
            </tr>
        </thead>
        <tbody>
            {% for boxStatus in boxStatuses %}
                <tr>
                    <td>
                        <a href="{{ path('box_status_show', { 'id': boxStatus.id, 'plnId': pln.id, 'boxId': box.id }) }}">
                            {{ boxStatus.created|date }}
                        </a>
                    </td>
                    <td>{% if boxStatus.success %}Yes{% else %}No{% endif %}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(boxStatuses) }}
    </div>

{% endblock %}
