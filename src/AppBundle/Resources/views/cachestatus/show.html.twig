{% extends 'base.html.twig' %}

{% block title %}CacheStatus{% endblock %}

{% block pageheader %} 
    <h1>CacheStatus</h1>
{% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('box_cache_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('box_cache_edit', { 'id': cacheStatus.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('box_cache_delete', { 'id': cacheStatus.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this CacheStatus?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Response</th>
                <td>{% if cacheStatus.response %}{{ cacheStatus.response|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if cacheStatus.created %}{{ cacheStatus.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if cacheStatus.updated %}{{ cacheStatus.updated|date }}{% endif %}</td>
            </tr>        
            <tr>
                <th>Boxstatus</th>
                <td>
                    <a href="{{ path('boxStatus_show', { 'id': cacheStatus.boxStatus.id}) }}">
                        {{ cacheStatus.boxStatus }}
                    </a>
                </td>
            </tr>        
        </tbody>
    </table>
{% endblock %}
