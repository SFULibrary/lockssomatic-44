{% extends 'base.html.twig' %}

{% block title %}Au{% endblock %}

{% block pageheader %} 
    <h1>Au</h1>
{% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('au_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('au_edit', { 'id': au.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('au_delete', { 'id': au.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Au?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Managed</th>
                <td>{% if au.managed %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Auid</th>
                <td>{{ au.auid }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ au.comment }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if au.created %}{{ au.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if au.updated %}{{ au.updated|date }}{% endif %}</td>
            </tr>        
            <tr>
                <th>Pln</th>
                <td>
                    <a href="{{ path('pln_show', { 'id': au.pln.id}) }}">
                        {{ au.pln }}
                    </a>
                </td>
            </tr>        
            <tr>
                <th>Contentprovider</th>
                <td>
                    <a href="{{ path('contentProvider_show', { 'id': au.contentProvider.id}) }}">
                        {{ au.contentProvider }}
                    </a>
                </td>
            </tr>        
            <tr>
                <th>Plugin</th>
                <td>
                    <a href="{{ path('plugin_show', { 'id': au.plugin.id}) }}">
                        {{ au.plugin }}
                    </a>
                </td>
            </tr>        
        </tbody>
    </table>
    {% if au.auProperties | length > 0 %}    
        <h2>Auproperties</h2>
        <ul>
            {% for auProperties in au.auProperties %}
                <li>
                    <a href="{{ path("auProperties_show", {"id":auProperties.id}) }}">
                        {{ auProperties }}
                    </a>
                </li>
            {% endfor %} 
        </ul>
    {% endif %}
    {% if au.auStatus | length > 0 %}    
        <h2>Austatus</h2>
        <ul>
            {% for auStatus in au.auStatus %}
                <li>
                    <a href="{{ path("auStatus_show", {"id":auStatus.id}) }}">
                        {{ auStatus }}
                    </a>
                </li>
            {% endfor %} 
        </ul>
    {% endif %}
    {% if au.content | length > 0 %}    
        <h2>Content</h2>
        <ul>
            {% for content in au.content %}
                <li>
                    <a href="{{ path("content_show", {"id":content.id}) }}">
                        {{ content }}
                    </a>
                </li>
            {% endfor %} 
        </ul>
    {% endif %}
{% endblock %}
