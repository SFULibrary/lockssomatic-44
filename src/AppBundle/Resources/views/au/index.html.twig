{% extends 'base.html.twig' %}

{% block title %}Au List{% endblock %}

{% block pageheader %}
    <h1>Au List</h1>
    <p class="count">
        Displaying {{ aus|length }} aus of {{ aus.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('au_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New
                </a>
            {% endif %}
            <a href="{{ path('au_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Managed</th>
                <th>Auid</th>
                <th>Comment</th>
            </tr>
        </thead>
        <tbody>
            {% for au in aus %}
                <tr>
                    <td>
                        <a href="{{ path('au_show', { 'id': au.id }) }}">
                            {{ au.managed }}
                        </a>
                    </td>
                    <td>{{ au.auid }}</td>
                    <td>{{ au.comment }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(aus) }}
    </div>

{% endblock %}
