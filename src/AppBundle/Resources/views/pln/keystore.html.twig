{% extends 'base.html.twig' %}

{% block title %}New Keystore{% endblock %}


{% block body %}
    <h1>New Keystore</h1>

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.file) }}
        <div class="col-sm-10">
            <div class="input-group">
                <label class="input-group-btn">
                    <span class="btn btn-primary">
                        Browseâ€¦ {{ form_widget(form.file, {'attr': {'class': 'hidden'}}) }} 
                    </span>
                </label>                    
                <input type="text" class="form-control" readonly="" id="filename">
            </div>
            {% if form.file.vars.attr.help_block %}
                <p class='help-block'>
                    {{ form.file.vars.attr.help_block }}
                    {% if form.file.vars.attr.max_size %}
                        The maximum file size is {{ form.file.vars.attr.max_size }}.
                    {% endif %}
                </p>
            {% endif %}
        </div>
    </div>
        
    {{ form_rest(form) }}
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a href="{{ path('plugin_index') }}" class="btn btn-warning">Cancel</a>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}
