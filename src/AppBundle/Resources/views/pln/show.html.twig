{% extends 'base.html.twig' %}

{% block title %}Pln{% endblock %}

{% block pageheader %} 
    <h1>Pln</h1>
{% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('pln_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('pln_edit', { 'id': pln.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('pln_delete', { 'id': pln.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Pln?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ pln.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ pln.description }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ pln.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td><i>not shown</i></td>
            </tr>
            <tr>
                <th>Enable Content Ui</th>
                <td>{% if pln.enableContentUi %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Content Port</th>
                <td>{{ pln.contentPort }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if pln.created %}{{ pln.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if pln.updated %}{{ pln.updated|date }}{% endif %}</td>
            </tr>        
        </tbody>
    </table>
    {% if pln.properties %}
        <h2>Properties</h2>
        <ul>            
            {% for property in pln.properties %}
                <li>{{ property }}</li>
                {% endfor %}
        </ul>
    {% endif %}
    {% if pln.aus | length > 0 %}    
        <h2>Aus</h2>
        <ul>
            {% for aus in pln.aus %}
                <li>
                    <a href="{{ path("aus_show", {"id":aus.id}) }}">
                        {{ aus }}
                    </a>
                </li>
            {% endfor %} 
        </ul>
    {% endif %}
    {% if pln.boxes | length > 0 %}    
        <h2>Boxes</h2>
        <ul>
            {% for boxes in pln.boxes %}
                <li>
                    <a href="{{ path("box_show", {"plnId": pln.id, "id":boxes.id}) }}">
                        {{ boxes }}
                    </a>
                </li>
            {% endfor %} 
        </ul>
    {% endif %}
    {% if pln.contentProviders | length > 0 %}    
        <h2>Contentproviders</h2>
        <ul>
            {% for contentProviders in pln.contentProviders %}
                <li>
                    <a href="{{ path("contentProviders_show", {"id":contentProviders.id}) }}">
                        {{ contentProviders }}
                    </a>
                </li>
            {% endfor %} 
        </ul>
    {% endif %}
{% endblock %}
