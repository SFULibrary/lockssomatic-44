{% extends 'base.html.twig' %}

{% block title %}AuStatus{% endblock %}

{% block pageheader %} 
    <h1>AuStatus</h1>
{% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('pln_au_status_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('pln_au_status_edit', { 'id': auStatus.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('pln_au_status_delete', { 'id': auStatus.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this AuStatus?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Query Date</th>
                <td>{% if auStatus.queryDate %}{{ auStatus.queryDate|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if auStatus.status %}{{ auStatus.status|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Errors</th>
                <td>{% if auStatus.errors %}{{ auStatus.errors|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if auStatus.created %}{{ auStatus.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if auStatus.updated %}{{ auStatus.updated|date }}{% endif %}</td>
            </tr>        
            <tr>
                <th>Au</th>
                <td>
                    <a href="{{ path('au_show', { 'id': auStatus.au.id}) }}">
                        {{ auStatus.au }}
                    </a>
                </td>
            </tr>        
        </tbody>
    </table>
{% endblock %}
