{% extends 'base.html.twig' %}

{% block title %}PluginProperty{% endblock %}

{% block pageheader %} 
    <h1>PluginProperty</h1>
{% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('plugin_property_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('plugin_property_edit', { 'id': pluginProperty.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('plugin_property_delete', { 'id': pluginProperty.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this PluginProperty?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Property Key</th>
                <td>{{ pluginProperty.propertyKey }}</td>
            </tr>
            <tr>
                <th>Property Value</th>
                <td>{{ pluginProperty.propertyValue }}</td>
            </tr>
            <tr>
                <th>Is List</th>
                <td>{% if pluginProperty.isList %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if pluginProperty.created %}{{ pluginProperty.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if pluginProperty.updated %}{{ pluginProperty.updated|date }}{% endif %}</td>
            </tr>        
            <tr>
                <th>Plugin</th>
                <td>
                    <a href="{{ path('plugin_show', { 'id': pluginProperty.plugin.id}) }}">
                        {{ pluginProperty.plugin }}
                    </a>
                </td>
            </tr>        
            <tr>
                <th>Parent</th>
                <td>
                    <a href="{{ path('parent_show', { 'id': pluginProperty.parent.id}) }}">
                        {{ pluginProperty.parent }}
                    </a>
                </td>
            </tr>        
        </tbody>
    </table>
    {% if pluginProperty.children | length > 0 %}    
        <h2>Children</h2>
        <ul>
            {% for children in pluginProperty.children %}
                <li>
                    <a href="{{ path("children_show", {"id":children.id}) }}">
                        {{ children }}
                    </a>
                </li>
            {% endfor %} 
        </ul>
    {% endif %}
{% endblock %}
