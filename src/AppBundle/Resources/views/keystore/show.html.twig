{% extends 'base.html.twig' %}

{% block title %}Keystore{% endblock %}

{% block pageheader %} 
    <h1>Keystore</h1>
{% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('pln_keystore_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('pln_keystore_edit', { 'id': keystore.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('pln_keystore_delete', { 'id': keystore.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Keystore?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Path</th>
                <td>{{ keystore.path }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ keystore.filename }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if keystore.created %}{{ keystore.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if keystore.updated %}{{ keystore.updated|date }}{% endif %}</td>
            </tr>        
        </tbody>
    </table>
{% endblock %}
