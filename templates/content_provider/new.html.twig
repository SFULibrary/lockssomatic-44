{% extends 'base.html.twig' %}

{% block title %}New ContentProvider{% endblock %}


{% block body %}
    <h1>New ContentProvider</h1>

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.uuid) }}
        <div class="col-sm-10">
            <div class="input-group">
                {{ form_widget(form.uuid) }}
                <span class="input-group-btn">
                    <btn id="uuid-generator" class="btn btn-default">Generate</btn>
                </span>
            </div>
            <p class='help-block'>
                Copy/paste a UUID here, 
                or generate one.
            </p>
        </div>
    </div>

    {{ form_rest(form) }}
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a href="{{ path('content_provider_index') }}" class="btn btn-warning">Cancel</a>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}

{% block javascripts %}
    <script>
        function guid() {
            function s4() {
                return Math.floor((1 + Math.random()) * 0x10000)
                        .toString(16)
                        .substring(1);
            }
            return s4() + s4() + '-' + s4() + '-' + s4() + '-' +
                    s4() + '-' + s4() + s4() + s4();
        }
        
        $("#uuid-generator").click(function () {
            $("#content_provider_uuid").val(guid().toUpperCase());
        });
    </script>
{% endblock %}
